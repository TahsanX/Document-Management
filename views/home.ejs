    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
          sans-serif;
        background: #0f172a;
        color: white;
        line-height: 1.6;
      }

      .main-content {
        background: linear-gradient(
          135deg,
          #1e293b 0%,
          #334155 50%,
          #0f172a 100%
        );
        min-height: 100vh;
        padding-top: 2rem;
      }

      .department-section {
        margin: 4rem 0;
        position: relative;
      }

      .department-header {
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
      }

      .department-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #3b82f6, #10b981);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
        text-transform: uppercase;
      }

      .department-subtitle {
        font-size: 1.5rem;
        color: #e2e8f0;
        font-weight: 600;
        margin-bottom: 2rem;
      }

      .section-divider {
        width: 100px;
        height: 4px;
        background: linear-gradient(135deg, #3b82f6, #10b981);
        border-radius: 2px;
        margin: 2rem auto;
      }

      .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
      }

      .dashboard-card {
        background: rgba(30, 41, 59, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(51, 65, 85, 0.3);
        border-radius: 1rem;
        padding: 2rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .dashboard-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(135deg, #3b82f6, #10b981);
      }

      .dashboard-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        border-color: rgba(59, 130, 246, 0.5);
      }

      .card-icon {
        width: 60px;
        height: 60px;
        background: rgba(59, 130, 246, 0.1);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        color: #3b82f6;
        font-size: 1.5rem;
      }

      .card-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #e2e8f0;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .card-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: #10b981;
        line-height: 1;
      }

      .expenses-section {
        margin-top: 3rem;
      }

      .expenses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
      }

      .expense-card {
        background: rgba(30, 41, 59, 0.9);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(51, 65, 85, 0.3);
        border-radius: 1rem;
        padding: 2.5rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
      }

      .expense-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(135deg, #f59e0b, #d97706);
      }

      .expense-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
      }

      .expense-icon {
        width: 80px;
        height: 80px;
        background: rgba(245, 158, 11, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: #f59e0b;
        font-size: 2rem;
      }

      .expense-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #e2e8f0;
        margin-bottom: 1rem;
      }

      .expense-value {
        font-size: 3rem;
        font-weight: 800;
        color: #f59e0b;
        margin-bottom: 0.5rem;
      }

      .expense-currency {
        font-size: 1rem;
        color: #94a3b8;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      /* Department specific colors */
      .cse .department-title {
        background: linear-gradient(135deg, #3b82f6, #1e40af);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .cse .dashboard-card::before {
        background: linear-gradient(135deg, #3b82f6, #1e40af);
      }

      .eee .department-title {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .eee .dashboard-card::before {
        background: linear-gradient(135deg, #f59e0b, #d97706);
      }

      .eee .card-icon {
        background: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
      }

      .me .department-title {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .me .dashboard-card::before {
        background: linear-gradient(135deg, #ef4444, #dc2626);
      }

      .me .card-icon {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
      }

      .ce .department-title {
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .ce .dashboard-card::before {
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
      }

      .ce .card-icon {
        background: rgba(139, 92, 246, 0.1);
        color: #8b5cf6;
      }

      @media (max-width: 768px) {
        .department-title {
          font-size: 2.5rem;
        }

        .department-subtitle {
          font-size: 1.2rem;
        }

        .dashboard-grid {
          grid-template-columns: 1fr;
        }

        .expenses-grid {
          grid-template-columns: 1fr;
        }

        .card-value {
          font-size: 2rem;
        }

        .expense-value {
          font-size: 2.5rem;
        }
      }

      .section-background {
        position: relative;
        padding: 3rem 0;
        margin: 2rem 0;
      }

      .section-background::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(30, 41, 59, 0.3);
        backdrop-filter: blur(5px);
        border-radius: 2rem;
        border: 1px solid rgba(51, 65, 85, 0.2);
      }

      .section-background > * {
        position: relative;
        z-index: 2;
      }
    </style>
  </head>
